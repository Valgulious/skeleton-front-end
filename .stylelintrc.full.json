{
    "extends": [
        "stylelint-config-standard",
        "@code-quality/stylelint-styled-components-config",
        "stylelint-config-prettier"
    ],
    "plugins": ["stylelint-order"],
    "rules": {
        "indentation": 4,
        "color-hex-length": "long",
        "at-rule-empty-line-before": [
            "always",
            {
                "except": ["blockless-after-same-name-blockless", "first-nested"],
                "ignore": ["after-comment"]
            }
        ],
        "unit-blacklist": null,
        "order/properties-order": [
            [
                "content",
                "position",
                "display",
                "flex",
                "flex-direction",
                "flex-wrap",
                "flex-grow",
                "flex-shrink",
                "flex-basis",
                "grid-area",
                "grid-column",
                "grid-column-start",
                "grid-column-end",
                "grid-row",
                "grid-row-start",
                "grid-row-end",
                "place-self",
                "justify-self",
                "align-self",
                "grid",
                "grid-template",
                "grid-template-areas",
                "grid-template-columns",
                "grid-template-rows",
                "grid-auto-flow",
                "grid-auto-columns",
                "grid-auto-rows",
                "place-items",
                "align-items",
                "justify-items",
                "place-content",
                "align-content",
                "justify-content",
                "gap",
                "column-gap",
                "row-gap",
                "columns",
                "columns-count",
                "columns-width",
                "columns-gap",
                "width",
                "min-width",
                "max-width",
                "height",
                "min-height",
                "max-height",
                "margin",
                "margin-top",
                "margin-right",
                "margin-bottom",
                "margin-left",
                "margin-inline",
                "margin-inline-start",
                "margin-inline-end",
                "padding",
                "padding-top",
                "padding-right",
                "padding-bottom",
                "padding-left",
                "border",
                "border-top",
                "border-right",
                "border-bottom",
                "border-left",
                "border-width",
                "border-top-width",
                "border-right-width",
                "border-bottom-width",
                "border-left-width",
                "border-radius",
                "border-color",
                "border-top-color",
                "border-right-color",
                "border-bottom-color",
                "border-left-color",
                "background",
                "background-color",
                "background-image",
                "background-repeat",
                "background-size",
                "background-position",
                "background-attachment",
                "list-style",
                "list-style-type",
                "list-style-image",
                "list-style-position",
                "opacity",
                "transform",
                "box-shadow",
                "fill",
                "color",
                "font",
                "font-size",
                "line-height",
                "font-weight",
                "font-style",
                "text-align",
                "text-decoration",
                "text-transform"
            ],
            {
                "unspecified": "bottom"
            }
        ]
    }
}
